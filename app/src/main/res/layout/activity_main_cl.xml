                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            android:background="@color/white"
                            android:scaleType="centerCrop"
                            android:onClick="OrderPainter"
                            android:src="@drawable/carpentry_icon" />

                        <TextView
                            android:id="@+id/showMore4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="ShowMore4"
                            android:text="Show More"
                            android:fontFamily="@font/oxanium_regular"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CardView 5 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:tag="Pool"
                    app:cardBackgroundColor="@color/glossy_red"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cardTitle5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Pool Cleaner"
                            android:fontFamily="@font/oxanium_regular"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                        <ImageButton
                            android:id="@+id/imageButtonToReplace5"
                            android:layout_width="match_parent"
