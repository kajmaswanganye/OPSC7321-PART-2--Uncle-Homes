                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Painter"
                            android:fontFamily="@font/oxanium_regular"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <ImageButton
                            android:id="@+id/imageButtonToReplace1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:scaleType="centerCrop"
                            android:onClick="OrderPainter"
                            android:src="@drawable/painting_wall_icon" />

                        <TextView
                            android:id="@+id/showMore1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="ShowMore1"
                            android:text="Show More"
                            android:fontFamily="@font/oxanium_regular"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CardView 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:tag="Plumber"
