<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/glossy_green">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/idToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/oxanium_extra_bold"
                android:gravity="center"
                android:padding="4dp"
                android:text="Book service"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="10dp">

        <ListView
            android:id="@+id/serviceListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_margin="5dp" />

    </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/serviceDetailsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvServiceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service: "
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/oxanium_regular"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <EditText
                        android:id="@+id/etNumberOfRooms"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Number of rooms"
                        android:fontFamily="@font/oxanium_regular"
                        android:inputType="number"
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvServiceTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <EditText
                        android:id="@+id/etDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Select Date and Time"
                        android:fontFamily="@font/oxanium_regular"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/etNumberOfRooms"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchRecurring"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="Recurring Service?"
                        android:fontFamily="@font/oxanium_regular"
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/etDateTime"
                        app:layout_constraintStart_toStartOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/etTask"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Add a task"
                        android:fontFamily="@font/oxanium_regular"
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <Button
                        android:id="@+id/btnAddTask"
                        android:layout_width="157dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:text="Add Task"
                        android:fontFamily="@font/oxanium_regular"
                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etTask" />

                    <ListView
                        android:id="@+id/lvTasks"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/btnAddTask"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <Button
                        android:id="@+id/btnProceed"
                        android:layout_width="157dp"
                        android:layout_height="60dp"
                        android:text="Proceed"
                        android:fontFamily="@font/oxanium_regular"
                        android:backgroundTint="@color/white"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"
                        android:layout_margin="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/lvTasks"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>