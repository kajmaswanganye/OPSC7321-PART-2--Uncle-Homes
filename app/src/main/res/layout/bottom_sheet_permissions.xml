<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title for Permissions -->
        <TextView
            android:id="@+id/idTVPermissionsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="App Permissions"
            android:fontFamily="@font/oxanium_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Checkbox for Location Permission -->
        <CheckBox
            android:id="@+id/idCBLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVPermissionsTitle"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Location Access"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/oxanium_regular" />

        <!-- Checkbox for Camera Permission -->
        <CheckBox
            android:id="@+id/idCBCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idCBLocation"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Camera Access"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/oxanium_regular" />

        <!-- Checkbox for Notifications Permission -->
        <CheckBox
            android:id="@+id/idCBNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idCBCamera"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Notifications Access"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/oxanium_regular" />

        <!-- Checkbox for File Access Permission -->
        <CheckBox
            android:id="@+id/idCBFileAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idCBNotifications"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="File Access"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/oxanium_regular" />

        <!-- Button for applying permission changes -->
        <Button
            android:id="@+id/idBtnDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idCBFileAccess"
            android:layout_margin="10dp"
            android:text="Apply Changes"
            android:textAllCaps="false"
            android:fontFamily="@font/oxanium_bold"
            android:backgroundTint="@color/background"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
