<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/glossy_green">

    <View
        android:id="@+id/topRectangle"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginBottom="2dp"
        android:background="@color/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/Order1"
        android:layout_width="376dp"
        android:layout_height="131dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topRectangle" />

    <View
        android:id="@+id/Order2"
        android:layout_width="376dp"
        android:layout_height="131dp"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Order1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="357dp"
        android:layout_height="56dp"
        android:fontFamily="@font/oxanium_extra_bold"
        android:gravity="center_horizontal|center"
        android:text="ORDER HISTORY"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/topRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/topRectangle"
        app:layout_constraintTop_toTopOf="@+id/topRectangle"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/orderPicture2"
        android:layout_width="121dp"
        android:layout_height="111dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/Order1"
        app:layout_constraintStart_toStartOf="@+id/Order1"
        app:layout_constraintTop_toTopOf="@+id/Order1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gardening" />

    <ImageView
        android:id="@+id/orderPicture3"
        android:layout_width="121dp"
        android:layout_height="111dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/Order2"
        app:layout_constraintStart_toStartOf="@+id/Order2"
        app:layout_constraintTop_toTopOf="@+id/Order2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/paint_roller" />

    <TextView
        android:id="@+id/OrderPrice2"
        android:layout_width="136dp"
        android:layout_height="25dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="24dp"
        android:text="20 June 2024"
        android:textAlignment="center"
        android:fontFamily="@font/oxanium_regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Order1"
        app:layout_constraintTop_toTopOf="@+id/Order1" />

    <TextView
        android:id="@+id/OrderPrice3"
        android:layout_width="136dp"
        android:layout_height="25dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="64dp"
        android:text="Total Price: R350"
        android:textAlignment="center"
        android:fontFamily="@font/oxanium_regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Order1"
        app:layout_constraintTop_toTopOf="@+id/Order1" />

    <TextView
        android:id="@+id/OrderPrice4"
        android:layout_width="136dp"
        android:layout_height="25dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="29dp"
        android:text="19 March 2024"
        android:textAlignment="center"
        android:fontFamily="@font/oxanium_regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Order2"
        app:layout_constraintTop_toTopOf="@+id/Order2" />

    <TextView
        android:id="@+id/OrderPrice5"
        android:layout_width="136dp"
        android:layout_height="25dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="76dp"
        android:text="Total Price: R200"
        android:textAlignment="center"
        android:fontFamily="@font/oxanium_regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Order2"
        app:layout_constraintTop_toTopOf="@+id/Order2" />

    <ImageView
        android:id="@+id/orderMore2"
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/Order1"
        app:layout_constraintEnd_toEndOf="@+id/Order1"
        app:srcCompat="@drawable/more" />

    <ImageView
        android:id="@+id/orderMore3"
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/Order2"
        app:layout_constraintEnd_toEndOf="@+id/Order2"
        app:srcCompat="@drawable/more" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background2"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/client_bottom_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>