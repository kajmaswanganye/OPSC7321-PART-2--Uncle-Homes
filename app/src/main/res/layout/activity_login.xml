<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/glossy_green">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Uncle Homes"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:fontFamily="@font/oxanium_extra_bold"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/tvWelcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Login Here! "
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="italic"
            android:fontFamily="@font/oxanium_regular"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/glossy_yellow"
        app:cardCornerRadius="40dp"
        android:layout_margin="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter email"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:fontFamily="@font/oxanium_regular"/>

            <!-- Title Text -->
            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter password"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:fontFamily="@font/oxanium_regular"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your Role:"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/oxanium_regular"/>

            <!-- Role Selection: Client -->
            <RadioGroup
                android:id="@+id/roleRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:id="@+id/clientRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:outlineSpotShadowColor="@color/black"
                    android:text="Client"
                    android:checked="true"
                    android:fontFamily="@font/oxanium_regular"/>

                <RadioButton
                    android:id="@+id/serviceProviderRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Provider"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxanium_regular"/>

            </RadioGroup>


            <Button
                android:id="@+id/btnLogin"
                android:layout_width="157dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:text="Login"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/oxanium_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Forgot Password?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/oxanium_regular"/>

            <TextView
                android:id="@+id/tvRecoverPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Click here to recover"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/glossy_red"
                android:fontFamily="@font/oxanium_regular"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/glossy_red"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Login using"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/oxanium_regular"/>

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="62dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/gmail_mail_logo_social_icon" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <!--Button for click-->
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:text=" New user ? Sign up"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18sp"
       android:clickable="@layout/activity_signup"
        android:fontFamily="@font/oxanium_regular"/>

</LinearLayout>