<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title for Change Language -->
        <TextView
            android:id="@+id/idTVChangeLanguageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Change Language"
            android:fontFamily="@font/oxanium_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Dropdown for selecting a language -->
        <Spinner
            android:id="@+id/idSpinnerLanguages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVChangeLanguageTitle"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="@drawable/spinner_background"
            android:entries="@array/languages_array"
            android:spinnerMode="dropdown" />

        <!-- Button for applying changes -->
        <Button
            android:id="@+id/idBtnDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idSpinnerLanguages"
            android:layout_margin="10dp"
            android:text="Apply Changes"
            android:textAllCaps="false"
            android:fontFamily="@font/oxanium_bold"
            android:backgroundTint="@color/background"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
