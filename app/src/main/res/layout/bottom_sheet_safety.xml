<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Image view for displaying safety icon or compliance logo -->
        <ImageView
            android:id="@+id/idIVSafetyIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/safety_icon"
            android:contentDescription="Safety and compliance icon" />

        <!-- Text view for displaying safety and compliance title -->
        <TextView
            android:id="@+id/idTVSafetyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/idIVSafetyIcon"
            android:layout_marginTop="10dp"
            android:text="Safety and Compliance Guidelines"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Text view for displaying safety overview -->
        <TextView
            android:id="@+id/idTVSafetyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVSafetyTitle"
            android:layout_toEndOf="@id/idIVSafetyIcon"
            android:layout_marginTop="5dp"
            android:text="Ensure safety for yourself and customers by adhering to our appâ€™s compliance standards."
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!-- Text view for compliance information -->
        <TextView
            android:id="@+id/idTVComplianceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVSafetyDescription"
            android:layout_toEndOf="@id/idIVSafetyIcon"
            android:layout_marginTop="10dp"
            android:text="Compliance: Stay Updated"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Text view for compliance tips -->
        <TextView
            android:id="@+id/idTVComplianceTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVComplianceInfo"
            android:layout_toEndOf="@id/idIVSafetyIcon"
            android:layout_marginTop="5dp"
            android:text="Follow all safety protocols, legal requirements, and the app's terms of service for every job."
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!-- Button for dismissing the safety and compliance card -->
        <Button
            android:id="@+id/idBtnDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVComplianceTips"
            android:layout_margin="10dp"
            android:text="Dismiss"
            android:textAllCaps="false"
            android:backgroundTint="@color/background"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
